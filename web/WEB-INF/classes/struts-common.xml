<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.custom.i18n.resources" value="com.globalwave.common.i18n"/>
    <package name="common" namespace="/common" extends="global-default">	        
        <action name="*_*" method="{2}" class="common_{1}Action">
            <result name="{2}">/WEB-INF/pages/{1}/{2}.jsp</result>     
            <interceptor-ref name="bizDefaultStack"/>   
        </action>	        
        <action name="FileUpload" method="create" class="common_fileAction">     
            <interceptor-ref name="fileUploadStack"/>   
        </action>
    </package>
    
    <package name="fm" namespace="/fm" extends="global-default">    
        <action name="*_*" method="{2}" class="fm_{1}Action">
            <result name="jsp">/WEB-INF/pages/fm/{1}/{2}.jsp</result>   
            <interceptor-ref name="bizDefaultStack"/>   
        </action>
    </package>
</struts>
